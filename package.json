{
  "name": "lil-match",
  "version": "0.1.0",
  "description": "Super small pattern matching library for TS projects",
  "type": "module",
  "main": "./mod.js",
  "types": "./mod.d.ts",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "repository": "exah/lil-match",
  "author": "John Grishin <r@exah.me>",
  "license": "ISC",
  "files": [
    "mod.js",
    "mod.d.ts"
  ],
  "size-limit": [
    {
      "path": "./mod.js",
      "import": "{ match }",
      "limit": "255B"
    }
  ],
  "jest": {
    "preset": "ts-jest",
    "transform": {},
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    }
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.3",
    "@types/jest": "^27.0.3",
    "jest": "^27.3.1",
    "np": "^7.6.0",
    "size-limit": "^7.0.3",
    "ts-jest": "^27.0.7",
    "tsd": "^0.19.0",
    "typescript": "^4.5.2"
  }
}
